<div class="room_index">
  <%@rooms.each_with_index do |room,index|%>
  <%=render partial: "rooms", locals: {room: room,index: index}%>
  <%end%>

  <div class="res_form">
    <div class="res_form__title">
      スレッドを作成
    </div>
    <%=form_for @room do |f|%>
    <div class="main-form">
      <div class="main-form__name">
        <%=f.text_field :title, placeholder: "スレタイトル"%>
      </div>
      <div class="main-form__password">
        <%=f.text_field :password, placeholder: "パスワード(必須、スレ削除、編集に使用)"%>
      </div>
      <div class="main-form__author">
        <%=f.text_field :author, placeholder: "名前", value: "名無しさん"%>
      </div>
      <div class="main-form__text">

        <%=f.text_area :first_message, rows: "6", placeholder: "1コメ"%>
        <div>

          <div>
            <%= f.submit "作成する", class: "btn btn-secondary"%>
          </div>

          <%end%>
        </div>
      </div>
